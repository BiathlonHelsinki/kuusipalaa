var $fc = $("#calendar");  
var screenWidth = $(window).width(); 
var options = {
    editable: true,
    header: {
      left: 'prev,next today',
      center: 'title',
      right: 'month,agendaWeek,agendaDay'
    },
    defaultView: 'month',
    contentHeight: '400px',
    lang: '#{I18n.locale.to_s}',
    contentHeight: 'auto',
    firstDay: 1,
    fixedWeekCount: false,
    slotMinutes: 30,
    eventClick: function(calEvent, jsEvent, view) {
      $('#idea_start_at').val(calEvent.day);
      $('.fc-event').css('background-color', '#AAA');
      $(this).css('background-color', '#f05e6b');
      $(window).scrollTo('#actions', {duration: 1000});
      return false;
    },
    eventSources: [
      {
        url: "/ideas/calendar.json"
      }
    ],
    eventRender: (event, element, view) => {
      element.addClass(event.class)          
    },
    eventAfterAllRender: (view) => {
      if ($('#idea_start_at').val() != '') {
        $('a.fc-event[href="choose_day/' + moment($('#idea_start_at').val()).format("YYYY-MM-DD") + '"]').css('background-color', '#f05e6b');
      }  
      $('a.event').on('click', function(e) {
        e.preventDefault();
        $(this).css({'pointer-events' : 'none'});
      })
      $('a.proposal').on('click', function(e) {
        e.preventDefault();
        $(this).css({'pointer-events' : 'none'});
      })
    },
    displayEventEnd: {
      month: true,
      basicWeek: true,
      "default": true
    },
    timeFormat: 'H:mm',
    dragOpacity: "0.5"
};

var mobileOptions = {
  editable: true,
  header: {
    left: 'prev,next today',
    center: 'title',
    right: 'month,agendaWeek,agendaDay'
  },
  defaultView: 'listMonth',
  contentHeight: '400px',
  lang: '#{I18n.locale.to_s}',
  contentHeight: 'auto',
  firstDay: 1,
  fixedWeekCount: false,
  slotMinutes: 30,
  eventSources: [
    {
      url: '/users/calendar.json'
    }
  ],
  displayEventEnd: {
    month: true,
    basicWeek: true,
    "default": true
  },
  timeFormat: 'H:mm',
  dragOpacity: "0.5"
};
if (screenWidth < 700) {
  $fc.fullCalendar(mobileOptions);
  } else {
    $fc.fullCalendar(options);
  }
 var today = new Date();
  var d = today.getFullYear()+'-0'+(today.getMonth()+1)+'-'+today.getDate();
  if (d < '2018-03-01') {
    $fc.fullCalendar('gotoDate', '2018-03-01');
  }

$(window).resize(function() {
  screenWidth = $(window).width(); 
  $fc.fullCalendar('destroy');
  if (screenWidth < 700) {
    $fc.fullCalendar(mobileOptions);
    } else {
      $fc.fullCalendar(options);
    };
     var today = new Date();
  var d = today.getFullYear()+'-0'+(today.getMonth()+1)+'-'+today.getDate();
  if (d < '2018-03-01') {
    $fc.fullCalendar('gotoDate', '2018-03-01');
  }
});

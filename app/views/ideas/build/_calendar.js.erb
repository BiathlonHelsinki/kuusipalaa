var $fc = $("#calendar");  
var screenWidth = $(window).width(); 
var options = {
    editable: true,
    header: {
      left: 'prev,next today',
      center: 'title',
      right: 'month,agendaWeek,agendaDay'
    },
    defaultView: 'month',
    contentHeight: '400px',
    lang: '#{I18n.locale.to_s}',
    contentHeight: 'auto',
    firstDay: 1,
    fixedWeekCount: false,
    slotMinutes: 30,
    eventClick: function(calEvent, jsEvent, view) {
      $('#idea_start_at').val(calEvent.day);
      $('.fc-event').css('background-color', 'black');
      $(this).css('background-color', 'red');
      return false;
    },
    eventSources: [
      {
        url: "/ideas/calendar.json"
      }
    ],
    displayEventEnd: {
      month: true,
      basicWeek: true,
      "default": true
    },
    timeFormat: 'H:mm',
    dragOpacity: "0.5"
};

var mobileOptions = {
  editable: true,
  header: {
    left: 'prev,next today',
    center: 'title',
    right: 'month,agendaWeek,agendaDay'
  },
  defaultView: 'listMonth',
  contentHeight: '400px',
  lang: '#{I18n.locale.to_s}',
  contentHeight: 'auto',
  firstDay: 1,
  fixedWeekCount: false,
  slotMinutes: 30,
  eventSources: [
    {
      url: '/users/calendar.json'
    }
  ],
  displayEventEnd: {
    month: true,
    basicWeek: true,
    "default": true
  },
  timeFormat: 'H:mm',
  dragOpacity: "0.5"
};
if (screenWidth < 700) {
  $fc.fullCalendar(mobileOptions);
  } else {
    $fc.fullCalendar(options);
  };

$(window).resize(function() {
  screenWidth = $(window).width(); 
  $fc.fullCalendar('destroy');
  if (screenWidth < 700) {
    $fc.fullCalendar(mobileOptions);
    } else {
      $fc.fullCalendar(options);
    };
});
